<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_marginStart="@dimen/grid_4"
    android:layout_marginEnd="@dimen/grid_4"
    android:background="@drawable/rect_grey_rounded"
    app:cardElevation="0dp">


    <ImageView
        android:id="@+id/icon_calendar"
        android:background="@drawable/ic_calendar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/grid_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/delivery_reminder_label"
        style="@style/BodyPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_1"
        android:layout_marginStart="@dimen/grid_3"
        app:layout_constraintStart_toEndOf="@id/icon_calendar"
        android:paddingEnd="@dimen/grid_4"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/pledge_delivery_warning" />


</androidx.constraintlayout.widget.ConstraintLayout>